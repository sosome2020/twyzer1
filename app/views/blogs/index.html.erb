<h1>Twyzer</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Date</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.ourdate %></td>
    <td><%= link_to 'Check the details', blog_path(blog.id) %></td>
    <td><%= link_to "Edit Twyzer", edit_blog_path(blog.id) %></td>
    <td><%= link_to 'Delete Twyzer', blog_path(blog.id), method: :delete %></td>
  </tr>

<% end %>
</table>
<br>
<%= link_to 'Post a new twyzer', new_blog_path %>
