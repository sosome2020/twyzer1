<h1>Editing Twyzer</h1>
<%= form_with(model: @blog,local: true) do |form| %>
  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="blog_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="blog_content">
    <%= form.label :ourdate %>
    <%= form.text_field :ourdate%>
  </div>
  <%= form.submit %>
<% end %>
